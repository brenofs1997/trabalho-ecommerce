
@{
    ViewData["Pesquisar Produtos"] = "Index";
    Layout = "~/Views/Share/_Layout.cshtml";
}
    <script src="~/views/PesquisarProduto/indexPesquisar.js"></script>
<section class="section-bg wow fadeInUp">
    <div class="container container-conteudo">

        <div class="section-header">
            <h3>Pesquisar Produtos</h3>
            <p>Formulário para pesquisa de Produtos.</p>
        </div>

        <div class="form">
            <div id="sendmessage"></div>
            <div id="errormessage"></div>
            <form role="form" class="contactForm">
                <div class="form-row">

                    <div class="form-group col-md-12">
                        <input type="search" name="produto"
                               class="form-control"
                               id="produto" placeholder="Nome do Produto" />
                    </div>

                    <div id="divMsg"></div>

                </div>

                <div class="text-center">
                    <input type="button"
                           value="PESQUISAR"
                           id="btnPesquisar"
                           onclick="indexPesquisar.btnPesquisarOnClick()" />
                </div>
                <div id="divMsg"></div>
            </form>
            <br />
            <br />
            <table id="tbProdutos" style="display:none">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Valor</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody id="tbodyProdutos">
                    <!--Aqui... carregado por ajax-->
                </tbody>
            </table>
        </div>

    </div>
</section>



